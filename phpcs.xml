<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>PHP_CodeSniffer ruleset for WordPress plugins and themes development.</description>

    <rule ref="PHPCompatibility"></rule>
    <rule ref="WordPress"></rule>

	<rule ref="WordPress.Security.ValidatedSanitizedInput">
		<properties>
			<property name="customSanitizingFunctions" type="array" value="wc_clean" />
		</properties>
	</rule>

	<!-- Whitelist default PHP objects attribute names -->
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
			<!-- From SimpleXMLElement -->
			<property name="customPropertiesWhitelist" type="array">
				<element value="ownerDocument" />
				<element value="formatOutput" />
			</property>
		</properties>
	</rule>
</ruleset>
