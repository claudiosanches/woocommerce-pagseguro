<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>PHP_CodeSniffer ruleset for WordPress plugins and themes development.</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>

	<!-- How to scan -->
	<!-- Usage instructions: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Usage -->
	<!-- Annotated ruleset: https://github.com/squizlabs/PHP_CodeSniffer/wiki/Annotated-ruleset.xml -->
	<arg value="sp"/><!-- Show sniff and progress -->
	<arg name="basepath" value="./"/><!-- Strip the file paths down to the relevant bit -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/><!-- Enables parallel processing when available for faster results. -->

    <rule ref="PHPCompatibility"></rule>
    <rule ref="WordPress"></rule>

	<rule ref="WordPress.Security.ValidatedSanitizedInput">
		<properties>
			<property name="customSanitizingFunctions" type="array" value="wc_clean" />
		</properties>
	</rule>

	<!-- Whitelist default PHP objects attribute names -->
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<properties>
			<!-- From SimpleXMLElement -->
			<property name="customPropertiesWhitelist" type="array">
				<element value="ownerDocument" />
				<element value="formatOutput" />
			</property>
		</properties>
	</rule>
</ruleset>
